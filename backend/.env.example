# === Investron Backend — Local Development ===
# Copy this file to .env:  cp .env.example .env

# --- Database (local Docker Postgres via docker-compose.dev.yml) ---
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/investron

# --- Debug mode ---
# When true: skips JWT verification (returns a hardcoded dev user),
# and enables SQLAlchemy SQL echo logging.
DEBUG=true

# --- Supabase (NOT needed for local dev when DEBUG=true) ---
# Uncomment and fill these only if you want real auth locally:
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_PUBLISHABLE_KEY=your-publishable-key
# SUPABASE_SECRET_KEY=your-secret-key

# --- SEC EDGAR (required — use your real name and email) ---
SEC_EDGAR_USER_AGENT=Investron yourname@email.com

# --- CORS ---
CORS_ORIGINS=http://localhost:5173

# --- Scanner (disabled by default for local dev to avoid yfinance rate-limiting) ---
SCANNER_ENABLED=false
